<h2>Sign In</h2>

<%= form_with model: @user, url: sign_in_path do |form| %>

    <div class="mb-3">
        <%= form.label :Email %>
        <%= form.text_field :email, class: "form-control", placeholder: "abc@abc.com" %>
    </div>

    <div class="mb-3">
        <%= form.label :Password %>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    </div>

    <div class="mb-3">
        <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>
<% end %>